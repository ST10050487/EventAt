<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeScreen">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location Not Found" />


        <ImageView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification_icon"
            android:contentDescription="Notifications" />

        <ImageView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/user_icon"
            android:contentDescription="User Icon" />

    </LinearLayout>
    <!-- Search field -->
    <EditText
        android:id="@+id/search"
        android:layout_width="288dp"
        android:layout_height="37dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_search_icon"
        android:hint="Search"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        tools:ignore="MissingConstraints" />


    <!-- "Upcoming Events" section -->
    <LinearLayout
        android:id="@+id/upcoming_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upcoming Events"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="@color/grey" />
    </LinearLayout>

    <!-- RecyclerView for upcoming events -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upcomingEventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/upcoming_section"
        app:layout_constraintBottom_toTopOf="@id/close_section"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/activity_upcoming_event" />

    <!-- "Events Around" section -->
    <LinearLayout
        android:id="@+id/close_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/closeEventsRecyclerView"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Events Around"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="@color/grey" />
    </LinearLayout>

    <!-- RecyclerView for close events -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/closeEventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/activity_close_event" />

</androidx.constraintlayout.widget.ConstraintLayout>
