<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ticketDownload">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/EventHeading"
            android:layout_width="@dimen/_268sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:gravity="center"
            android:lineSpacingExtra="-7sp"
            android:text="Springbok vs Blackcaps"
            android:textAppearance="@style/supporting_"
            android:textColor="@color/purple"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/arrowButton"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/EventImage"
            android:layout_width="0dp"
            android:layout_height="@dimen/_181sdp"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_48sdp"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventHeading"
            app:shapeAppearanceOverlay="@style/RoundedCorners" />

        <ImageView
            android:id="@+id/Calendervector"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventImage" />

        <ImageView
            android:id="@+id/ClockVector"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/clock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Calendervector" />

        <TextView
            android:id="@+id/EventDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="@dimen/_4ssp"
            android:text="Sat, 7th September"
            android:textAppearance="@style/supporting_"
            android:textColor="@color/purple"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/Calendervector"
            app:layout_constraintTop_toTopOf="@id/Calendervector" />

        <TextView
            android:id="@+id/EventTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginStart="@dimen/_28sdp"
            android:gravity="center_vertical"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="4sp"
            android:text="17:00 pm"
            android:textAppearance="@style/supporting_"
            android:textColor="@color/purple"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ClockVector"
            app:layout_constraintTop_toTopOf="@id/ClockVector" />

        <TextView
            android:id="@+id/TicketHeading"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:lineSpacingExtra="-7sp"
            android:text="Ticket"
            android:textAppearance="@style/supporting_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventTime" />

        <ImageView
            android:id="@+id/QRCodeImage"
            android:layout_width="0dp"
            android:layout_height="223dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/qrcode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TicketHeading" />

        <TextView
            android:id="@+id/stage_price"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="-12sp"
            android:text="ZAR Cash 350"
            android:textColor="@color/purple"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/QRCodeImage" />

        <Button
            android:id="@+id/MakeTicketButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/continuue_b"
            android:text="Download Ticket"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stage_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>