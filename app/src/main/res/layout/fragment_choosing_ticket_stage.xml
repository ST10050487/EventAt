<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            tools:context=".Fragments.ChoosingTicketStage">

            <Button
                android:id="@+id/arrowButton"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_47sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/EventTitle"
                android:layout_width="295dp"
                android:layout_height="90dp"
                android:layout_marginStart="@dimen/_8sdp"
                android:gravity="center_horizontal|center_vertical"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="-2sp"
                android:text="Spring boks vs Blackcaps"
                android:textAppearance="@style/supporting_"
                android:textSize="@dimen/_26ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/arrowButton"
                app:layout_constraintTop_toTopOf="@id/arrowButton" />

            <TextView
                android:id="@+id/stage_price"
                android:layout_width="447dp"
                android:layout_height="54dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="-2sp"
                android:text="Seating Stage"
                android:textAppearance="@style/supporting_"
                android:textColor="@color/red"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/EventTitle" />

            <View
                android:id="@+id/rectangle_2"
                android:layout_width="383dp"
                android:layout_height="31dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="#323232"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stage_price" />

            <FrameLayout
                android:id="@+id/A_Premium_block"
                android:layout_width="353dp"
                android:layout_height="59dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="16dp"
                android:background="#FFB6B6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rectangle_2">

                <Button
                    android:id="@+id/A_block_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:lineSpacingExtra="-2sp"
                    android:padding="0dp"
                    android:text="A block (VIP) R 1000"
                    android:textAppearance="@style/supporting_"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/B_Premium_block"
                android:layout_width="170dp"
                android:layout_height="178dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="16dp"
                android:background="#FCF192"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/A_Premium_block">

                <Button
                    android:id="@+id/b_block_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:lineSpacingExtra="-2sp"
                    android:padding="0dp"
                    android:text="B Block (Premium) R500"
                    android:textColor="@color/black"
                    android:textAppearance="@style/supporting_"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/C_Premium_block"
                android:layout_width="166dp"
                android:layout_height="176dp"
                android:layout_marginStart="18dp"
                android:background="#34EEE3"
                app:layout_constraintStart_toEndOf="@id/B_Premium_block"
                app:layout_constraintTop_toTopOf="@id/B_Premium_block">

                <Button
                    android:id="@+id/c_block_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:lineSpacingExtra="-2sp"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:text="C Block (Premium) R500"
                    android:textAppearance="@style/supporting_"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/D_superior_block"
                android:layout_width="356dp"
                android:layout_height="161dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="16dp"
                android:background="#E092FC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/B_Premium_block">

                <Button
                    android:id="@+id/d_block_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="-2sp"
                    android:padding="0dp"
                    android:text="D block (Superior) 350 - 250"
                    android:textAppearance="@style/supporting_"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:id="@+id/supporting_2"
                android:layout_width="159dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="-7sp"
                android:text="No of Tickets"
                android:textAppearance="@style/supporting_"
                android:textColor="@color/purple"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/D_superior_block" />

            <FrameLayout
                android:id="@+id/square2"
                android:layout_width="154dp"
                android:layout_height="45dp"
                android:layout_marginStart="52dp"
                android:background="@drawable/squareshape"
                app:layout_constraintStart_toEndOf="@id/supporting_2"
                app:layout_constraintTop_toTopOf="@id/supporting_2">

                <TextView
                    android:id="@+id/ticketNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="-7sp"
                    android:text="1"
                    android:textAppearance="@style/supporting_" />

                <TextView
                    android:id="@+id/ticketAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:lineSpacingExtra="-7sp"
                    android:text="+"
                    android:textAppearance="@style/supporting_" />

                <TextView
                    android:id="@+id/ticketMinus"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:lineSpacingExtra="-7sp"
                    android:text="-"
                    android:textAppearance="@style/supporting_" />
            </FrameLayout>

            <Button
                android:id="@+id/TicketSubmitButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/continuue_b"
                android:text="Book Ticket"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/square2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
</ScrollView>