<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOfParticipants">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_text"
        android:backgroundTint="#AEA9A9"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:hint="Start Typing Name to Search"
        android:padding="12dp"
        android:textColor="#000000" />

    <!-- Title for Participants -->
    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Participants"
        android:textColor="#2D394E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Sold Button -->
    <Button
        android:id="@+id/sold_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_title"
        android:layout_marginTop="16dp"
        android:background="#5F19F2"
        android:padding="12dp"
        android:text="Sold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- List of Participants -->
    <ScrollView
        android:id="@+id/participants_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sold_button"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Participant Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Participant Icon -->
                    <ImageView
                        android:id="@+id/participant_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/participantspic" />

                    <!-- Participant Name -->
                    <TextView
                        android:id="@+id/participant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/participant_icon"
                        android:text="Participant Name"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/participant_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/participant_name"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/participant_icon"
                        android:text="participant@gmail.com"
                        android:textColor="#808080"
                        android:textSize="14sp" />

                    <!-- Payment Status -->
                    <TextView
                        android:id="@+id/payment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="PAID"
                        android:textColor="#00FF00"
                        android:textSize="14sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>






            <!-- Participant Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
