<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/ShadeImage"
            android:layout_width="@dimen/_404sdp"
            android:layout_height="@dimen/_263sdp"
            android:background="#C4C4C4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/EventImage"
            android:layout_width="@dimen/_411sdp"
            android:layout_height="@dimen/_265sdp"
            android:background="@drawable/springbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/EventTitle"
            android:layout_width="196dp"
            android:layout_height="104dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-1sp"
            android:text="Spring boks vs Blackcaps"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="@dimen/_17ssp"
            app:layout_constraintEnd_toStartOf="@id/share_icon"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventImage" />

        <Button
            android:id="@+id/share_icon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_76sdp"
            android:background="@drawable/share"
            app:layout_constraintBottom_toBottomOf="@id/EventTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/EventTitle"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/save_icon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/save"
            app:layout_constraintBottom_toBottomOf="@id/EventTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/EventTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/startingFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center_vertical"
            android:lineSpacingExtra="6sp"
            android:text="Starting from"
            android:textAppearance="@style/supporting_"
            android:textColor="#ADADAD"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventTitle" />

        <Button
            android:id="@+id/Directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/noto_sans"
            android:gravity="center_vertical"
            android:lineSpacingExtra="6sp"
            android:padding="0dp"
            android:text="\t\t\tDirections"
            android:textAppearance="@style/supporting_"
            android:textColor="#ADADAD"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/DirectionIcon"
            app:layout_constraintTop_toBottomOf="@id/EventTitle" />

        <ImageView
            android:id="@+id/DirectionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/direction"
            app:layout_constraintBottom_toBottomOf="@id/Directions"
            app:layout_constraintEnd_toStartOf="@id/Directions"
            app:layout_constraintTop_toTopOf="@id/Directions" />

        <TextView
            android:id="@+id/EventPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-3sp"
            android:text="R250"
            android:textAppearance="@style/supporting_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startingFrom" />

        <TextView
            android:id="@+id/EventDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center_vertical"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:text="Date: "
            android:textAppearance="@style/supporting_"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventPrice" />

        <TextView
            android:id="@+id/EventAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="Address: "
            android:textAppearance="@style/supporting_"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventDate" />

        <TextView
            android:id="@+id/EventTime"
            android:layout_width="@dimen/_409sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/_3ssp"
            android:text="Time: "
            android:textAppearance="@style/supporting_"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventAddress" />

        <TextView
            android:id="@+id/EventWeather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="Weather: "
            android:textAppearance="@style/supporting_"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventTime" />

        <TextView
            android:id="@+id/EventParticipants"
            android:layout_width="@dimen/_411sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="Max Participants: "
            android:textAppearance="@style/supporting_"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.016"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventWeather" />

        <Button
            android:id="@+id/EventSubmitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:background="@drawable/continuue_b"
            android:text="Buy Ticket"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EventParticipants"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>