<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <!-- Profile Title -->
    <TextView
        android:id="@+id/supporting_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/supporting_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/profilepic" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Manage Profile Button -->
    <LinearLayout
        android:id="@+id/manage_profile_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/manage_profile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/manageprofileicon" />

        <TextView
            android:id="@+id/manage_profile_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Manage Profile"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/manage_profile_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rightarrow" />
    </LinearLayout>

    <!-- Notifications Button -->
    <LinearLayout
        android:id="@+id/notifications_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/manage_profile_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/notifications_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/notiicon" />

        <TextView
            android:id="@+id/notifications_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/notifications_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rightarrow" />
    </LinearLayout>

    <!-- Change Password Button -->
    <LinearLayout
        android:id="@+id/change_password_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/notifications_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/change_password_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/changepasswordicon" />

        <TextView
            android:id="@+id/change_password_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/change_password_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rightarrow" />
    </LinearLayout>

    <!-- Multi-Factor Authentication Button -->
    <LinearLayout
        android:id="@+id/multi_factor_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/change_password_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/multi_factor_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/multiauthicon" />

        <TextView
            android:id="@+id/multi_factor_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Multi-Factor Authentication"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/multi_factor_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rightarrow" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>