<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EmailVerification">

    <!-- Back Arrow Icon -->
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:contentDescription="Back Arrow"
        android:src="@drawable/backarrorw" />

    <!-- Email Verification Header -->
    <TextView
        android:id="@+id/email_verif_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/noto_sans_adlam_bold"
        android:text="Email Verification"
        android:textColor="#2D394E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Verification Status Text -->
    <TextView
        android:id="@+id/email_verif_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_verif_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/noto_sans_adlam_medium"
        android:gravity="center"
        android:text="Email Verification Has Been Sent"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Check Mark Icon -->
    <ImageView
        android:id="@+id/check_mark_icon"
        android:layout_width="225dp"
        android:layout_height="224dp"
        android:layout_below="@+id/email_verif_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:contentDescription="Check Mark Icon"
        android:src="@drawable/google_tasks_purple_icon" />

    <!-- Additional Instructions -->
    <TextView
        android:id="@+id/instructions_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_mark_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/noto_sans_adlam_bold"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="Please Use Verification Code to get Password"
        android:textColor="#000000"
        android:textSize="14sp" />

    <!-- Go Back Button -->
    <Button
        android:id="@+id/go_back_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/instructions_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#5F19F2"
        android:fontFamily="@font/noto_sans_adlam_bold"
        android:text="Go Back"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
